{{!-- Login / Home page when the site gets opened --}}
<div class = "login-container">
    {{!-- Landing page heading --}}
    <div = "heading">
        <h1>Welcome to .. </h1>
        <h2> Streamline your Billing Process with Ease</h2>
    </div>
    <form action = "/login" method="POST">
    {{!-- Prompts user to enter account email --}}
    <label for = "email">Email: </label>
    <input type ="email" id ="email" name ="email" required>
    {{!-- Prompts user to enter account password --}}
    <label for = "password"> Password: </label>
    <input type = "password" id = "password" name = "password" required>
    {{!-- On click, takes user to the bill dashboard --}}
    <button type = "submit"> Login </button>
    </form>
    {{!-- Takes user to the sign up page to create account --}}
    <div>
    <p> Don't have an account? <a href = "./signUp.handlebars" Sign up now!></a> </p>
    </div>

</div>