{{!-- New Bill Form --}}
<div = "newBill">
    <form action="/addNewBill" method="POST">
        {{!-- Prompts user to enter the name of the bill --}} 
        <label for="billType">Bill type</label>
        <select id = "billTypeId" required>
            <option value="homeVal" id="homeType">Home </option>
            <option value="insuranceVal" id="insuranceType">Insurance </option>
            <option value="personalVal" id="personalType">Personal </option>
            <option value="educationVal" id="educationType ">Education </option>
            <option value="councilVal" id="councilType">Council </option>
        </select>
        {{!-- Prompts user to enter the type of bill --}}
        <label for="billName"> Bill category </label>
        <select id ="billNameId" required>

            <option value="electricity" id="homeId">Electricity</option>
            <option value="gas" id="homeId">Gas</option>
            <option value="water" id="homeId">Water</option>
            <option value="internet" id="homeId">Internet</option>
            <option value="healthInsurance" id="insuranceId">Health Insurance</option>
            <option value="homeInsurance" id="insuranceId">Home Insurance</option>
            <option value="carInsurance" id="insuranceId">Car Insurance</option>
            <option value="carRego" id="personalId">Car Registration</option>
            <option value="phone" id="personalId">Phone bill</option>
            <option value="schoolFee" id="educationId">School Fee</option>
            <option value="councilRates" id="councilId">Council Rates</option>
            <option value="dogRego" id="councilId">Dog Registration </option>
        
        </select>

            

        {{!-- Prompts user to enter bill amount --}}
        <label for="billAmount">How much is the bill?</label>
        <input type = "billAmountTxt" id = "billAmountId" required>
        {{!-- Prompts user to enter bill due-date --}}
        <label for = "billDue">When is the due-date for this bill?</label>
        <input type = "billDueTxt" id = "billDueId" required>

        <button id="addBtn">Add</button>

        <button id="clearBtn">Clear</button>
    
        
    </form>
<script src="../public/js/newBill.js"></script>
</div>